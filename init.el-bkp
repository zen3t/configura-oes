;; Função para definir o comando de compilação dinamicamente
(defun ze/set-cpp-compile-command ()
  (when (eq major-mode 'c++-mode)
    (let ((file-name (file-name-nondirectory (buffer-file-name))))
      (setq-local compile-command
                  (concat "g++ " file-name " -o a.out -Wall -g")))))

(add-hook 'c++-mode-hook 'ze/set-cpp-compile-command)
(add-hook 'c++-mode-hook 'electric-indent-mode)

(global-set-key (kbd "<f5>") 'compile)
(global-set-key (kbd "<f6>") 'ze/run-cpp-program)

(defun ze/run-cpp-program ()
  (interactive)
  (let ((exe (concat default-directory "a.out")))
    (if (file-exists-p exe)
        (progn
          (shell-command (format "chmod +x %s" exe))
          (let ((buffer (get-buffer-create "*C++ Output*")))
            (with-current-buffer buffer
              (erase-buffer))
            (async-shell-command exe buffer)
            (pop-to-buffer buffer)
            (message "Pressione 'q' para fechar o buffer ou 'SPC b k' para matá-lo.")))
      (message "Executável 'a.out' não encontrado. Compile primeiro com F5!"))))

