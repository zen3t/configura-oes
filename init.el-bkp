(defun ze/reload-settings ()
  (interactive)
  (load-file (expand-file-name "init.el" user-emacs-directory)))

(defun ze/open-emacs-config ()
  (interactive)
  (find-file (expand-file-name "init.el" user-emacs-directory)))

(defun ze/emacs-personal-files ()
  (interactive)
  (let ((default-directory user-emacs-directory))
    (call-interactively 'find-file)))

(defun ze/open-alacritty ()
  (interactive)
  (start-process "alacritty" nil "alacritty"))

(defun ze/run-python-script ()
  (interactive)
  (let ((file-name (buffer-file-name)))
    (if file-name
        (progn
          (save-buffer)
          (let ((buffer (get-buffer-create "*Python Output*")))
            (with-current-buffer buffer
              (erase-buffer))
            (async-shell-command (concat "python3 " file-name) buffer)
            (pop-to-buffer buffer)
            (message "Pressione 'q' para fechar o buffer ou 'SPC b k' para matá-lo.")))
      (message "Buffer não está associado a um arquivo!"))))

;; Funções para gerenciar o UV
(defun ze/uv-add-package (pkg)
  "Adiciona um pacote ao projeto usando UV."
  (interactive "sNome do pacote para adicionar: ")
  (let ((default-directory (projectile-project-root)))
    (compile (format "%s add %s" uv-executable pkg))))

(defun ze/uv-install ()
  "Instala todas as dependências do projeto usando UV."
  (interactive)
  (let ((default-directory (projectile-project-root)))
    (compile (format "%s install" uv-executable))))

(defun ze/uv-sync ()
  "Sincroniza o ambiente virtual com o pyproject.toml usando UV."
  (interactive)
  (let ((default-directory (projectile-project-root)))
    (compile (format "%s sync" uv-executable))))

