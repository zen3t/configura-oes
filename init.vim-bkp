vim.api.nvim_create_autocmd("FileType", {
  pattern = "python",
  callback = function()
    vim.keymap.set('n', '<F5>', ':w<CR>:terminal python %<CR>', { buffer = true })
  end,
})

vim.api.nvim_create_autocmd("FileType", {
  pattern = { "c", "cpp" },
  callback = function()
    vim.keymap.set('n', '<F5>', ':w<CR>:terminal g++ -std=c++11 % -o %:r && ./%:r<CR>', { buffer = true })
  end,
})

